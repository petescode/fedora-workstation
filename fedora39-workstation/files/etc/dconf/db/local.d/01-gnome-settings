# Custom default GNOME settings for file-chooser (affects Nautilus)
[org/gtk/settings/file-chooser]
sort-directories-first=true
show-hidden=true

# Both file-chooser keys appear active in Fedora37
[org/gtk/gtk4/settings/file-chooser]
sort-directories-first=true
show-hidden=true

[org/gnome/desktop/interface]
font-name='DejaVu Sans 11'
monospace-font-name='DejaVu Sans Mono 11'
document-font-name='DejaVu Sans 11'
color-scheme='prefer-dark'
icon-theme='Papirus'

# Custom default GNOME settings for Nautilus
[org/gnome/nautilus/preferences]
default-folder-viewer='list-view'
thumbnail-limit='100'

[org/gnome/desktop/wm/preferences]
button-layout='close,minimize,maximize:appmenu'
titlebar-font='DejaVu Sans Bold 11'

[org/gnome/shell]
favorite-apps=['firefox.desktop', 'google-chrome.desktop', 'org.gnome.Nautilus.desktop', 'org.gnome.Screenshot.desktop', 'org.keepassxc.KeePassXC.desktop', 'virt-manager.desktop', 'code.desktop']

# When to lock the screen
[org/gnome/desktop/session]
idle-delay=1800

# when to go to sleep when on charger
[org/gnome/settings-daemon/plugins/power]
sleep-inactive-ac-timeout=3600
sleep-inactive-ac-type='nothing'

# Terminator keybinding shortcut
[org/gnome/settings-daemon/plugins/media-keys]
custom-keybindings=['/org/gnome/settings-daemon/plugins/media-keys/custom-keybindings/custom0/']

[org/gnome/settings-daemon/plugins/media-keys/custom-keybindings/custom0]
binding='<Control>t'
command='terminator'
name='terminal'

